{
  "manifest_version": 3,
  "name": "Social Sentry - Focus Mode",
  "version": "1.6.1",
  "description": "Block short videos, feeds, and distractions on Facebook and YouTube. Stay focused with Social Sentry.",
  "author": "MK Shaon",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "https://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "content/facebook.js"
      ],
      "css": [
        "content/facebook.css"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "content/youtube.js"
      ],
      "css": [
        "content/youtube.css"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}